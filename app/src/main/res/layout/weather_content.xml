<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:background="#c4b2cd">

            <TextView
                android:id="@+id/morning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_light"
                android:text="Morning" />

            <ImageView
                android:id="@+id/mornIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleX="2"
                android:scaleY="2"
                android:layout_margin="20sp"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/mornName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:hint="Scattered Clouds"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mornMax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_light"
                android:layout_weight="0.5"
                android:hint="22°C" />

            <TextView
                android:id="@+id/mornHumid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:hint="30%"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="#b8a2c3">

            <TextView
                android:id="@+id/afternoon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_light"
                android:text="Afternoon" />

            <ImageView
                android:id="@+id/aftIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleX="2"
                android:scaleY="2"
                android:layout_margin="20sp"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/aftName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:hint="Moderate Rain"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/aftMax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_light"
                android:layout_weight="0.5"
                android:hint="22°C" />

            <TextView
                android:id="@+id/aftHumid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:hint="30%"
                android:textSize="12sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:background="#ad93b8">

            <TextView
                android:id="@+id/evening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_light"
                android:text="Evening" />

            <ImageView
                android:id="@+id/evenIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleX="2"
                android:scaleY="2"
                android:layout_margin="20sp"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/evenName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:hint="Overcast Clouds"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/evenMax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_light"
                android:layout_weight="0.5"
                android:hint="22°C" />

            <TextView
                android:id="@+id/evenHumid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:hint="30%"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>